<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marvel_spacing_4dp"
        app:cardCornerRadius="@dimen/marvel_spacing_4dp"
        app:cardElevation="@dimen/marvel_spacing_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgItemComic"
            tools:src="@drawable/image_comic_hulk"
            android:layout_width="100dp"
            android:layout_height="150dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/marvel_light_bg_dark_primary_text"
        android:textSize="@dimen/marvel_text_size_12sp"
        android:textStyle="bold"
        android:id="@+id/txtComicTitle"
        android:layout_marginTop="@dimen/marvel_spacing_12dp"
        app:layout_constraintEnd_toEndOf="@id/cardImage"
        app:layout_constraintStart_toStartOf="@id/cardImage"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        tools:text="The Amazing Spiderman" />

    <TextView
        android:id="@+id/txtComicCreator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/marvel_light_bg_dark_secondary_text"
        android:textSize="@dimen/marvel_text_size_10sp"
        android:layout_marginTop="@dimen/marvel_spacing_4dp"
        app:layout_constraintEnd_toEndOf="@id/cardImage"
        app:layout_constraintStart_toStartOf="@id/cardImage"
        app:layout_constraintTop_toBottomOf="@id/txtComicTitle"
        tools:text="Stan Lee" />

</androidx.constraintlayout.widget.ConstraintLayout>