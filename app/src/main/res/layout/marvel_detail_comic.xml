<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/marvel_grey"
    android:padding="@dimen/marvel_spacing_16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marvel_spacing_4dp"
        app:cardCornerRadius="@dimen/marvel_spacing_4dp"
        app:cardElevation="@dimen/marvel_spacing_4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_item_comic"
            android:layout_width="100dp"
            android:layout_height="150dp"
            tools:src="@drawable/image_comic_hulk" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_detail_comic_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marvel_spacing_16dp"
        android:textColor="@color/marvel_white"
        android:textSize="@dimen/marvel_text_size_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/card_image_container"
        app:layout_constraintTop_toTopOf="@id/card_image_container"
        tools:text="Spider-Man (Miles Morales)" />

    <TextView
        android:id="@+id/label_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marvel_spacing_16dp"
        android:layout_marginTop="@dimen/marvel_spacing_12dp"
        android:textColor="@color/marvel_white"
        android:textSize="@dimen/marvel_text_size_12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/card_image_container"
        app:layout_constraintTop_toBottomOf="@id/text_detail_comic_title"
        tools:text="Creators:" />

    <TextView
        android:id="@+id/text_detail_comic_creators"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marvel_spacing_16dp"
        android:layout_marginTop="@dimen/marvel_spacing_4dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/marvel_white"
        android:textSize="@dimen/marvel_text_size_12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/card_image_container"
        app:layout_constraintTop_toBottomOf="@id/label_creator"
        tools:text="Ronald Byrd, Jeff Christiansen, Anthony Flamini, Michael Hoskin, Sean Mcquaid, Stuar..." />

    <TextView
        android:id="@+id/text_detail_comic_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marvel_spacing_16dp"
        android:textColor="@color/marvel_white"
        android:textSize="@dimen/marvel_text_size_14sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marvel_spacing_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/card_image_container"
        app:layout_constraintTop_toBottomOf="@id/text_detail_comic_creators"
        app:layout_constraintBottom_toBottomOf="@id/card_image_container"
        tools:text="Price $3.99" />

</androidx.constraintlayout.widget.ConstraintLayout>